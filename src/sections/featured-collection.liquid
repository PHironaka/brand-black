

{%- assign collection = collections[section.settings.collection] -%}



<div class="featured-collection--item">
  <img src="{{ section.settings.collection-img | img_url: 'master' }}" />

</div>
 



{% schema %}
  {
    "name": "Featured collection",
    "settings": [
      {
        "type": "image_picker",
        "id": "collection-img",
        "label": "collection-img"
      },

      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Featured collection",
        "category": "Collection"
      }
    ]
  }

{% endschema %}
